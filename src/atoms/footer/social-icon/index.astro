---

// IMPORT ASTRO ATOMS
import PictureInternalContain from "@/atoms/picture/internal/contain/index.astro"
import Link from  "@/atoms/links/index.astro"

// ASTRO PROPS
const {

     href,
     area_label,
     source,
     alternative_text

} = Astro.props

---

<div class="size-6 md:w-12 lg:size-14 xl:size-14 2xl:size-14">
    <Link href = { href } area_label={ area_label }>
            <PictureInternalContain 
                source = { source } 
                alternative_text = { alternative_text } 
            />
    </Link>  
</div>