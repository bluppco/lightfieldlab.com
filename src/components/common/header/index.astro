---
<MobileHeader/>

<section class="bg-black h-20 fixed z-50 w-full items-center justify-center overflow-hidden hidden md:block">
    <div class="flex justify-between items-center mx-20">
        <div class="h-16 w-44 pt-5 cursor-pointer">
            <a href="/.home">
                <div class="left-10">
                    <PictureInternal
                        alternative_text=""
                        source="/logo/Lightfield-logo.png"
                    />
                </div>
            </a>
        </div>
        <div>
            <ul class="text-white flex space-x-6 text-base tracking-wider cursor-pointer">
                <li class="text-cyan-500"><a href="">Home</a></li>
                    <LISTITEMCYAN><a href="/the-tech">The Tech</a></LISTITEMCYAN>
                    <LISTITEMCYAN><a href="/press">Press</a></LISTITEMCYAN>
                    <LISTITEMCYAN><a href="/contact">Contact</a></LISTITEMCYAN>
                    <LISTITEMCYAN><a href="/jobs">Jobs</a></LISTITEMCYAN>
                    <LISTITEMCYAN><a href="/holowire">HoloWire</a></LISTITEMCYAN>
            </ul>
        </div>
    </div>
</section>
