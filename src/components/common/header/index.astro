---

// IMPORTS ASTRO LAYOUTS
import Container from "@/layouts/container/index.astro"

---
<header class="bg-black h-20 fixed z-50 w-full items-center">
    <Container>
        <section class="flex items-center justify-between cursor-pointer">
            <div class="flex">
                <div class="h-18 w-40 py-4">
                    <img  
                        alt="" 
                        class="h-full w-full"
                        src="/logo/Lightfield-logo.png"
                    >
                </div>
                <div>
                    <img  
                        alt="" 
                        class="h-18 w-40 py-5 md:hidden" 
                        onclick="dropdown()"
                        src="/logo/Lightfield-logo.png"
                    >
                    <ul class="md:flex md:bg-black md:space-x-6 md:mr-20 md:py-6 md:space-y-0 md:px-0 py-5 pl-8 pr-20 text-base space-y-4 bg-white right-0 fixed z-50" id="submenu">
                        <li class="text-cyan-500"><a href="">Home</a></li>
                        <li class="md:text-white hover:text-cyan-500"><a href="">The Tech</a></li>
                        <li class="md:text-white hover:text-cyan-500"><a href="">Press</a></li>
                        <li class="md:text-white hover:text-cyan-500"><a href="">Contact</a></li>
                        <li class="md:text-white hover:text-cyan-500"><a href="">Jobs</a></li>
                        <li class="md:text-white hover:text-cyan-500"><a href="">HoloWire</a></li>
                    </ul>
                </div>    
            </div>   
        </section>       
    </Container>
</header>

<script type="text/javascript">
    function dropdown(){
        document.querySelector('#submenu').classList.toggle('hidden');
    }
    dropdown()
</script>
