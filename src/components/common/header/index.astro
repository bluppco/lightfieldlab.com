---

// IMPORT ASTRO LAYOUTS
import Container from "@/layouts/container/index.astro"


// IMPORT ASTRO COMPONENTS
import MobileHeader from "@/components/common/header/header-mobile/index.astro"

// IMPORT ASTRO ATOMS
import LISTITEMCYAN from "@/atoms/lists/list-item/cyan/index.astro"
