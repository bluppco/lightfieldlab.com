---

// IMPORT ASTRO LAYOUTS
import Container from "@/layouts/container/index.astro"

// IMPORT ASTRO COMPONENTS
import HeaderMobile from "@/components/common/header/header-mobile/index.astro"
import NavigationLinks from "@/components/common/header/navigation-links/index.astro"

// IMPORTS COLLECTION FROM CONTENT
import { getCollection } from "astro:content"

// IMPORTS FOOTER COLUMN TWO COLLECTION
let header_data = await getCollection('header')
header_data = header_data.filter( ( item ) => item.data.live ).sort( ( a, b ) => a.data.order - b.data.order )

---

<header class="hidden md:block bg-black h-20 w-full fixed z-50">
    <Container>
        <NavigationLinks header_data={ header_data } />
    </Container>
</header>
<HeaderMobile />
