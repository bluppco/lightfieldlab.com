---

// IMPORT ASTRO COMPONENTS
import TilteDescription from "@/components/home/solid-light-system/title-description/index.astro"

// IMPORT ASTRO ATOMS
import BlueGradientLine from "@/atoms/blue-gradient-line/index.astro"
import HeadingFiveThreeXl from "@/atoms/headings/five/three-xl/semibold/index.astro"
import HeadingFiveXl from "@/atoms/headings/five/xl/semibold/index.astro"
import HeadingTwoEightXl from "@/atoms/headings/two/eight-xl/medium/index.astro"
import ListItem from "@/atoms/lists/list-item/two-xl/index.astro"
import UnorderedList from "@/atoms/lists/unordered-list/index.astro"
import Video from "@/atoms/video/poster-video/index.astro"

const list=[
	"SolidLight Surface modular video wall panels",
	"Computational hardware including servers, GPUs, synchronization, & networking",
	"WaveTracer™: Powered by SolidLight, real-time and locally hosted rendering software and plugins to support your existing workflows",
	"Hardware/Software support and maintenance with optional design, engineering and development services available"
]

const table_data = [
	{
		description: "28” (.7m) modular self-emissive – SolidLight Surface panels",
		title: "Display Architecture",
	},
	{
		description: "Broad-spectrum complex-amplitude dense converging wavefront",
		title: "Type",
	},
	{
		description: "10 Billion Pixels /m² (nominal)",
		title: "Sample Density",
	},
	{
		description: "Wide-gamut 10bit HDR @ 60Hz",
		title: "Image Format",
	},
	{
		description: "WaveTracer™ plugins and factory calibration LUTs",
		title: "Software and Rendering",
	},
]

const video ={
	poster:"https://i.vimeocdn.com/video/1254025712-8a43170f8f2e8fc0afd24a70298210e7f06f24b3a94d09c48?mw=1800&mh=1013&q=70",
	source:"path_to_your_video.mp4"
}

---

<section class="py-8 px-6 sm:py-16 sm:px-16">
	<div class="py-4">
		<HeadingTwoEightXl>
			<div class="inline-block animate-slideInLeft">SolidLight<span class="text-xl font-bold pr-6">™</span></div>System
		</HeadingTwoEightXl>
	</div>
	<BlueGradientLine />
	<div class="flex flex-col sm:flex-row justify-evenly gap-16 sm:gap-8 sm:py-16 py-4">
		<div class="flex flex-col gap-2 sm:gap-4 sm:w-1/2">
			<HeadingFiveThreeXl>
				The SolidLight™ System is a turnkey solution to ensure transformational experiences.
			</HeadingFiveThreeXl>
			<div class="py-2 sm:py-8">
				<HeadingFiveThreeXl>The complete system includes:</HeadingFiveThreeXl>
			</div>
			<UnorderedList>
				{
					list.map((item) => {
						return (
							<ListItem>{	item }</ListItem>
						)
					})
				}
			</UnorderedList>
		</div>
		<div class="flex flex-col sm:gap-4 sm:w-1/2 animate-slideInRight">
			{
				table_data.map((item) => {
					return (
						<TilteDescription
							description={item.description}
							title={item.title}
						/>
					)
				})
			}
		</div>
	</div>
	<div class="pt-12 pb-6 sm:pb-12">
		<HeadingFiveXl>LIGHT FIELD LAB'S VISION FOR THE SOLIDLIGHT™ HOLOGRAPHIC FUTURE</HeadingFiveXl>
		<BlueGradientLine />
	</div>
	<Video
		poster={video.poster}
		source={video.source}
	/>
</section>
